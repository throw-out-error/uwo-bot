{
    "compilerOptions": {
        "target": "es2019",
        "lib": ["esnext"],
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "outDir": "dist",
        "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "*.sqlite"]
}
